{
  "compilerOptions": {
    "target": "ESNext", // 目标语言版本
    "module": "NodeNext", // 使用 ES6 模块
    "moduleResolution": "NodeNext", // 模块解析策略
    "outDir": "web", // 输出目录
    "rootDir": "./src", // 源代码目录
    "esModuleInterop": true, // 允许 CommonJS 和 ES 模块之间的互操作
    "forceConsistentCasingInFileNames": true, // 强制文件名大小写一致
    "strict": true, // 启用所有严格类型检查选项
    "skipLibCheck": true, // 跳过声明文件的类型检查
    "resolveJsonModule": true, // 允许导入 JSON 模块
    "declaration": false, // 不生成 .d.ts 声明文件
    "sourceMap": false, // 生成 source map
    "removeComments": true, // 删除注释
    "allowJs": true, // 允许编译 JavaScript 文件
    "checkJs": false, // 不对 JavaScript 文件进行类型检查
    "isolatedModules": true, // 确保每个文件都可以单独编译
    "noEmitOnError": true, // 如果有错误则不生成输出文件
    "lib": ["ESNext", "DOM"], // 包含的库
    "baseUrl": ".", // 解析非相对模块名称的基本目录
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "web"]
}